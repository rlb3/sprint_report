<%= form_for @user, :url => { :action => "create" } do |f| %>
  <%= f.label :sprint %>
  <%= f.select(:sprint_id, @sprints.map {|s| ["#{s.number}", s.id]}) %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :role %>
  <%= f.text_field :role %>
  <%= f.label :percentage %>
  <%= f.text_field :percent %>
  <%= f.submit "Create" %>
<% end %>