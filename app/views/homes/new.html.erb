<div class="row">
  <div class="offset1 span3">
    <%= form_for @user, :url => { :action => "create", :method => 'put' } do |f| %>
      <%= f.label :sprint %>
      <%= f.select(:sprint_id, @sprints.map {|s| ["#{s.number} | #{s.start.strftime("%F")} => #{s.end_sprint.strftime("%F")}", s.id]}) %> 
      <%= f.label :name %>
      <%= f.select(:name, @team.map { |t| t.full_name }) %>
      <%= f.label :role %>
      <%= f.select(:role, @roles.map { |r| r.name }) %>
      <%= f.label :percentage %>
      <%= f.number_field :percent, :in => 0..100, :step => 5 %>
      <%= f.submit "Create", :class => 'btn btn-primary' %>
    <% end %>
  </div>
</div>
  